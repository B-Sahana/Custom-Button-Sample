<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="White bg with/without icon"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.barelogics.sahana.CustomButton
        android:id="@+id/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:buttonType="normal_white_background"
        app:setColor="@color/purple_500"
        app:setImage="@drawable/ic_baseline_add_24"
        app:setText="Add"
        app:setTextSize="19sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:enabled="false"
        android:onClick="onClick"
        app:buttonType="normal_white_background"
        app:setColor="@color/purple_700"
        app:setCornerRadius="5dp"
        app:setText="Disabled"
        app:setTextSize="19sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClick"
        app:buttonType="normal_white_background"
        app:setColor="@color/teal_200"
        app:setImage="@drawable/ic_baseline_add_24"
        app:setStrokeWidth="@dimen/stroke_width"
        app:setText="Add"
        app:setTextSize="19sp"
        app:showImage="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Colored bg with/without icon, various text sizes and font"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:onClick="onClick"
        app:buttonType="color_background"
        app:setAllCaps="false"
        app:setColor="@color/teal_700"
        app:setCornerRadius="1dp"
        app:setImage="@drawable/ic_baseline_edit_24"
        app:setImageHeight="30dp"
        app:setImageWidth="30dp"
        app:setText="Edit"
        app:setTextFont="fonts/extrabold.otf"
        app:setTextSize="16sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:enabled="false"
        android:onClick="onClick"
        app:buttonType="color_background"
        app:setColor="@color/purple_200"
        app:setText="Edit"
        app:setTextFont="fonts/extrabold.otf"
        app:setTextSize="19sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:onClick="onClick"
        app:buttonType="color_background"
        app:setColor="@color/black"
        app:setCornerRadius="10dp"
        app:setImage="@drawable/ic_baseline_edit_24"
        app:setText="Edit"
        app:setTextSize="19sp"
        app:showImage="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Different border color and bg with/without icon"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClick"
        app:buttonType="color_background_with_color_border"
        app:setBorderColor="@android:color/holo_red_dark"
        app:setColor="@android:color/holo_blue_light"
        app:setCornerRadius="5dp"
        app:setText="Update"
        app:setTextSize="19sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClick"
        app:buttonType="normal_white_background_with_color_border"
        app:setBorderColor="@android:color/holo_green_dark"
        app:setColor="@android:color/holo_blue_light"
        app:setCornerRadius="5dp"
        app:setText="Update"
        app:setTextSize="19sp" />

    <com.barelogics.sahana.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        app:buttonType="normal_white_background"
        app:setColor="@android:color/holo_blue_bright"
        app:setCornerRadius="5dp"
        app:setImage="@drawable/ic_baseline_add_24" />
</LinearLayout>